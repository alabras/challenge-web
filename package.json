{
  "name": "search-challenge-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "awesome": "npm run test:unit && npm run lint",
    "test:unit": "npm test -- --reporters=default --reporters=jest-junit --coverage --watchAll=false --testPathIgnorePatterns=test/integration/.*$",
    "test": "react-scripts test",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test:mutation": "stryker run",
    "docker:build": "docker build -t search-challenger-web:latest .",
    "snyk:auth": "if [ -z ${SNYK_TOKEN+x} ]; then echo 'Debe configurar variable de entorno SNYK_TOKEN. Ej: export SNYK_TOKEN=XXXX' && exit 1; fi && snyk auth $SNYK_TOKEN",
    "snyk:package": "npm run snyk:auth && snyk test",
    "snyk:docker": "npm run docker:build && npm run snyk:auth && snyk container test search-challenger-web:latest --file=Dockerfile"
  },
  "dependencies": {
    "@babel/plugin-syntax-jsx": "^7.14.5",
    "bootstrap": "^5.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^5.1.1",
    "@stryker-mutator/jest-runner": "^5.1.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-security": "^1.4.0",
    "jest-junit": "^12.2.0",
    "node-sass": "^6.0.1",
    "prettier": "^2.3.1"
  },
  "jest": {
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "cobertura",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    },
    "coveragePathIgnorePatterns": [
      "src/index.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "./reports/junit",
    "outputName": "junit-${uuid}.xml",
    "uniqueOutputName": "true",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
